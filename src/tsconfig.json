{
  "compilerOptions": {
    "outDir": "../dist",
    "target": "ES2017",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "emscripten", "jquery", "xterm", "jstree", "jest"],
    "noEmit": true,
    "lib": ["dom", "webworker"],
  },
  "include": ["**/*.ts"],
}
